html
    head
        style
            include ./../../css/style.css
    body
        p
            each name, index in names
                if names.length == 1
                    = `${name}, `
                else if  index == names.length - 1 
                    = `and ${name},`
                else if index == names.length - 2
                    = `${name} `
                else 
                    = `${name}, `
    
    

